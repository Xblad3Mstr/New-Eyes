using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Utilities: MonoBehaviour
{

    float speed = 10f;
    private Rigidbody rig;
    GameObject blythe;
    int health = 100;
    float moveSpeed = 10f;
    // Start is called before the first frame update
    void Start()
    {
        
        rig = GetComponent<Rigidbody>();

    }

    // Update is called once per frame
    void Update()
    {
        //saw in tutorial
        float hAxis = Input.GetAxis("Horizontal");
        float vAxis = Input.GetAxis("Vertical");
        Vector3 movement = new Vector3(hAxis, 0, vAxis) * speed * Time.deltaTime;

        if (Input.GetAxis("Horizontal") != 0 || Input.GetAxis("Vertical") != 0)
        {
            float moveForward = Input.GetAxis("Vertical");
            float moveSideways = Input.GetAxis("Horizontal");
            transform.position = transform.position + Camera.main.transform.forward * (moveSpeed * moveForward) * Time.deltaTime;
            transform.position = transform.position + Camera.main.transform.right * (moveSpeed * moveSideways) * Time.deltaTime;
        }

    }


    public void LevelUp()
    {



    }

    public void LowHealth()
    {
        if (health <= 25 / 100)
        {

            print("Health is low");
           

        }


    }

    public void GameOver()
    {
        if(health <= 0)
        {
            Die();
        }
    }

    public void Die()
    {
        Destroy(gameObject);
    }

}
